<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.parentCommunicatorActivity.SendSMSActivity"
    tools:showIn="@layout/activity_send_sms">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6fafc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Class : "
        android:id="@+id/textView16"
        android:layout_marginTop="135dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextssms" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Student&apos;s (Recipient) :"
        android:id="@+id/textView15"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Message :"
        android:layout_marginTop="20dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/spinnerRecipient"
        android:layout_alignStart="@+id/spinnerRecipient" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextssms"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnSend"
        android:onClick="onClick"
        android:background="#068ae2"
        android:textSize="20dp"
        android:layout_below="@+id/editTextssms"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginTop="53dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerClass"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Message"
        android:id="@+id/checkBoxGroupSMS"
        android:checked="false"
        android:textColor="#fd3994"
        android:layout_below="@+id/textView39"
        android:layout_toEndOf="@+id/textView14" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerRecipient"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select is this a group message or not"
        android:id="@+id/textView39"
        android:textColor="#fd3994"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
