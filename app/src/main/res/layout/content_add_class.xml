<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/drawer_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.classActivity.AddClass"
    tools:showIn="@layout/activity_add_class">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Class Name :"
            android:id="@+id/txt_name"
            android:layout_marginTop="70dp"
            android:autoText="false"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:textColor="#17037d"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Starting Date :"
            android:id="@+id/txt_stratDate"
            android:textSize="20dp"
            android:textColor="#17037d"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/txt_day"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Day       :"
            android:id="@+id/txt_day"
            android:textSize="20dp"
            android:textColor="#17037d"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/txt_time"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Time    :"
            android:id="@+id/txt_time"
            android:textSize="20dp"
            android:textColor="#17037d"
            android:layout_below="@+id/txt_name"
            android:layout_alignEnd="@+id/txt_day"
            android:layout_marginTop="51dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          ADD          "
            android:id="@+id/button8"
            android:background="#033aa8"
            android:textColor="#ffffff"
            android:layout_marginTop="84dp"
            android:layout_below="@+id/txt_stratDate"
            android:layout_toEndOf="@+id/txt_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextname"
            android:layout_alignBottom="@+id/txt_name"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txt_stratDate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDay"
            android:layout_alignBottom="@+id/txt_time"
            android:layout_alignEnd="@+id/editTextname"
            android:layout_toEndOf="@+id/txt_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSdate"
            android:layout_alignBottom="@+id/txt_stratDate"
            android:layout_alignEnd="@+id/editText5"
            android:layout_toEndOf="@+id/txt_stratDate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_alignBottom="@+id/txt_day"
            android:layout_alignEnd="@+id/editTextDay"
            android:layout_toEndOf="@+id/txt_stratDate" />

    </RelativeLayout>

    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_list"
        android:layout_gravity = "start"
        android:background="@color/colorDraver"
        android:choiceMode="singleChoice"
        android:textAlignment="center" />

</android.support.v4.widget.DrawerLayout>
