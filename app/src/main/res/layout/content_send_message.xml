<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.parentCommunicatorActivity.SendMessageActivity"
    tools:showIn="@layout/activity_send_message">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_sendmessage">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonSendSMS"
            android:src="@drawable/sms_message"
            android:layout_above="@+id/textView38"
            android:layout_toStartOf="@+id/imageButtonSendEmail" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonSendEmail"
            android:src="@drawable/email_message"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="122dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EMAIL"
            android:id="@+id/textView37"
            android:layout_marginTop="74dp"
            android:textSize="30dp"
            android:layout_alignTop="@+id/imageButtonSendEmail"
            android:layout_alignStart="@+id/imageButtonSendEmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SMS"
            android:id="@+id/textView38"
            android:textSize="30dp"
            android:layout_marginBottom="120dp"
            android:layout_above="@+id/imageButtonSendEmail"
            android:layout_alignEnd="@+id/imageButtonSendSMS" />
    </RelativeLayout>

    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_list"
        android:layout_gravity = "start"
        android:background="@color/colorDraver"
        android:choiceMode="singleChoice"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
</android.support.v4.widget.DrawerLayout>
