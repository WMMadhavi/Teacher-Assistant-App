<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/drawer_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.StudentActivity.StudentActivity"
    tools:showIn="@layout/activity_student">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Name  :"
            android:id="@+id/textView"
            android:textColor="#030f94"
            android:textSize="10pt"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/sname"
            android:layout_above="@+id/cname"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Class :"
            android:id="@+id/textView2"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_above="@+id/cAddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/sname"
            android:layout_toEndOf="@+id/textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cParentName"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/cDoB"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Date of Birth :"
            android:id="@+id/textView13"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_alignBottom="@+id/cDoB"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cDoB"
            android:layout_below="@+id/cAddress"
            android:layout_alignEnd="@+id/cAddress"
            android:layout_alignStart="@+id/cTpNo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Gardiean&apos;s name :"
            android:id="@+id/textView3"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_above="@+id/cTpNo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Telephone No:"
            android:id="@+id/textView4"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   e-mail :"
            android:id="@+id/textView5"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_below="@+id/textView4"
            android:layout_toStartOf="@+id/cname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cTpNo"
            android:layout_above="@+id/textView5"
            android:layout_alignEnd="@+id/cAddress"
            android:layout_toEndOf="@+id/textView4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cEmail"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignEnd="@+id/cTpNo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Address :"
            android:id="@+id/textView6"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_alignBottom="@+id/cAddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cAddress"
            android:layout_below="@+id/cname"
            android:layout_alignEnd="@+id/cname"
            android:layout_alignStart="@+id/sname" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD "
            android:id="@+id/button"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:background="#033aa8"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/cEmail"
            android:layout_toEndOf="@+id/textView13" />
    </RelativeLayout>

    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_list"
        android:layout_gravity = "start"
        android:background="@color/colorDraver"
        android:choiceMode="singleChoice"
        android:textAlignment="center" />
</android.support.v4.widget.DrawerLayout>


