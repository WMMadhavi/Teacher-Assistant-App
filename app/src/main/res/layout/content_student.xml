<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/drawer_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.Student_and_ReporterActivity.StudentActivity"
    tools:showIn="@layout/activity_student"
    android:clickable="true">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Name  :"
                    android:id="@+id/textView"
                    android:textColor="#030f94"
                    android:textSize="10pt"
                    android:layout_above="@+id/cname"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextSName"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignStart="@+id/cAddress"
                    android:layout_toStartOf="@+id/btnUpdate"
                    android:layout_alignEnd="@+id/cParentName"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Date of Birth :"
                    android:id="@+id/textView13"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_marginTop="20dp"
                    android:layout_above="@+id/cParentName"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Address :"
                    android:id="@+id/textView6"
                    android:textSize="10pt"
                    android:layout_marginTop="15dp"
                    android:textColor="#030f94"
                    android:layout_above="@+id/textView13"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cAddress"
                    android:layout_above="@+id/textView13"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Gardiean&apos;s name :"
                    android:id="@+id/textView7"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_above="@+id/cTpNo"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cParentName"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView7" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Telephone No:"
                    android:id="@+id/textView26"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_marginBottom="112dp"
                    android:layout_above="@+id/btnUpdate"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cTpNo"
                    android:layout_alignBottom="@+id/textView26"
                    android:layout_marginTop="10dp"
                    android:layout_alignEnd="@+id/cParentName"
                    android:layout_toEndOf="@+id/textView7" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   e-mail :"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView27"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_below="@+id/cTpNo"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cEmail"
                    android:layout_marginLeft="5mm"
                    android:layout_below="@+id/textView27"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/cTpNo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD "
                    android:id="@+id/btnUpdate"
                    android:onClick="onClick"
                    android:textColor="#ffffff"
                    android:background="#033aa8"

                    android:layout_marginBottom="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textView13" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cname"

                    android:layout_above="@+id/cAddress"
                    android:layout_alignStart="@+id/cAddress" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonDate"
        android:src="@drawable/calendar"
        android:layout_alignBottom="@+id/cDoB"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                            "
        android:id="@+id/cDoB"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Class :"
        android:id="@+id/textView40"
        android:textSize="10pt"
        android:textColor="#030f94"
        android:layout_above="@+id/cAddress"
        android:layout_alignParentStart="true" />


</RelativeLayout>


