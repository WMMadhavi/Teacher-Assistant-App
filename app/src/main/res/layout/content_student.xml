<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:id="@+id/drawer_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.StudentActivity.StudentActivity"
    tools:showIn="@layout/activity_student">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Name  :"
                    android:id="@+id/textView"
                    android:textColor="#030f94"
                    android:textSize="10pt"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Class :"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView2"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Date of Birth :"
                    android:id="@+id/textView13"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_marginTop="20dp"
                    android:layout_above="@+id/cParentName"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cDoB"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:layout_above="@+id/cParentName"
                    android:layout_alignEnd="@+id/txt1"
                    android:layout_toEndOf="@+id/textView26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Address :"
                    android:id="@+id/textView6"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/cAddress"
                    android:layout_alignBottom="@+id/cAddress" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cAddress"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Gardiean&apos;s name :"
                    android:id="@+id/textView7"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_above="@+id/cTpNo"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_alignEnd="@+id/cDoB"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cParentName" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Telephone No:"
                    android:id="@+id/textView26"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_marginBottom="112dp"
                    android:layout_above="@+id/button7"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cTpNo"
                    android:layout_alignBottom="@+id/textView26"
                    android:layout_marginTop="10dp"
                    android:layout_alignEnd="@+id/cParentName"
                    android:layout_toEndOf="@+id/textView7" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   e-mail :"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView27"
                    android:textSize="10pt"
                    android:textColor="#030f94"
                    android:layout_below="@+id/cTpNo"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cEmail"
                    android:layout_marginLeft="5mm"
                    android:layout_below="@+id/textView27"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/cTpNo" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD "
                    android:id="@+id/button7"
                    android:onClick="onClick"
                    android:textColor="#ffffff"
                    android:background="#033aa8"

                    android:layout_marginBottom="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textView13" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt1"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cname"
                    android:layout_above="@+id/textView6"
                    android:layout_alignStart="@+id/cAddress" />


            </RelativeLayout>


    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_list"
        android:layout_gravity = "start"
        android:background="@color/colorDraver"
        android:choiceMode="singleChoice"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>
</android.support.v4.widget.DrawerLayout>


