<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:id="@+id/drawer_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.Student_and_ReporterActivity.StudentActivity"
    tools:showIn="@layout/activity_student"
    android:clickable="true">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="false"
       android:background="#e6fafc"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Name  :"
            android:id="@+id/textView"
            android:textColor="#030f94"
            android:textSize="10pt"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSName"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/cAddress"
            android:layout_alignEnd="@+id/cParentName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Class :"
            android:id="@+id/textView40"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_below="@+id/textView"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/textView40"
            android:layout_marginTop="25dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Address :"
            android:id="@+id/textView6"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView40"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cAddress"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Date of Birth :"
            android:id="@+id/textView13"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Gardiean&apos;s name :"
            android:id="@+id/textView7"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginTop="10dp"
            android:id="@+id/cParentName"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Telephone No:"
            android:id="@+id/textView26"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cTpNo"
            android:layout_alignBottom="@+id/textView26"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/cParentName"
            android:layout_toEndOf="@+id/textView7" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   e-mail :"
            android:id="@+id/textView27"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView26"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cEmail"
            android:layout_marginLeft="5mm"
            android:layout_below="@+id/textView27"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonDate"
            android:src="@drawable/calendar"
            android:layout_alignBottom="@+id/cDoB"
            android:layout_toEndOf="@+id/cDoB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="                            "
            android:id="@+id/cDoB"
            android:layout_alignTop="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD "
            android:id="@+id/btnDelete"
            android:onClick="onClick"
            android:textColor="#020202"
            android:background="#0bb0b3"
            android:layout_below="@+id/cEmail"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textView13" />
    </RelativeLayout>
   </ScrollView>

</RelativeLayout>


