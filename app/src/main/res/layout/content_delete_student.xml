<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.classActivity.DeleteStudentActivity"
    tools:showIn="@layout/activity_delete_student">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6fafc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Name  :"
            android:id="@+id/textView"
            android:textColor="#030f94"
            android:textSize="10pt"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/cname"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Date of Birth :"
            android:id="@+id/textView13"
            android:textSize="10pt"
            android:layout_marginTop="30dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Address :"
            android:id="@+id/textView6"
            android:layout_marginTop="30dp"
            android:textSize="10pt"
            android:textColor="#030f94"
            android:layout_below="@+id/spinnerStudent"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cAddress"
            android:layout_marginTop="30dp"
            android:textSize="10pt"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Gardiean&apos;s name :"
            android:id="@+id/textView7"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginTop="30dp"
            android:textSize="10pt"
            android:id="@+id/cParentName"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView7" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Telephone No:"
            android:id="@+id/textView26"
            android:textSize="10pt"
            android:layout_marginTop="30dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cTpNo"
            android:textSize="10pt"
            android:layout_alignBottom="@+id/textView26"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/cParentName"
            android:layout_toEndOf="@+id/textView7" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   E-mail :"
            android:id="@+id/textView27"
            android:textSize="10pt"
            android:layout_marginTop="30dp"
            android:textColor="#030f94"
            android:layout_below="@+id/textView26"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cEmail"
            android:textSize="10pt"
            android:layout_marginLeft="5mm"
            android:layout_below="@+id/textView27"
            android:layout_alignEnd="@+id/cTpNo"
            android:layout_alignStart="@+id/textView27" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btnDelete"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:background="#033aa8"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/cEmail"
            android:layout_toEndOf="@+id/textView26" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:layout_alignTop="@+id/textView40"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="                            "
            android:id="@+id/cDoB"
            android:layout_marginTop="30dp"
            android:textSize="10pt"
            android:layout_above="@+id/textView7"
            android:layout_toEndOf="@+id/textView26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Class :"
            android:id="@+id/textView40"
            android:textSize="10pt"
            android:layout_marginTop="30dp"
            android:textColor="#030f94"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerStudent"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView" />


    </RelativeLayout>
</RelativeLayout>
