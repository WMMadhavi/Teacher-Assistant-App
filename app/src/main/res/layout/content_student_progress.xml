<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.Student_and_ReporterActivity.StudentProgressActivity"
    tools:showIn="@layout/activity_student_progress">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/view_mark">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE OVERALL CLASS PERFOMANCE"
            android:id="@+id/btnSeePerfomanceClass"
            android:layout_gravity="center_horizontal|top"
            android:textSize="23dp"
            android:layout_below="@+id/btnAddPerfomance"
            android:layout_alignStart="@+id/btnAddPerfomance"
            android:layout_marginTop="50dp"
            android:background="#dfcbb9"
            android:layout_alignEnd="@+id/btnAddPerfomance" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Exams"
            android:textSize="25dp"
            android:height="50dp"
            android:width="50dp"
            android:id="@+id/btnAddExam"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="53dp"
            android:background="#b7e1f0"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/btnAddPerfomance"
            android:layout_alignStart="@+id/btnAddPerfomance" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Add Performance   "
            android:textSize="25dp"
            android:id="@+id/btnAddPerfomance"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="49dp"
            android:background="#c9cdf8"
            android:layout_below="@+id/btnAddExam"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE INDIVIDUAL STUDENT PERFOMANCE"
            android:id="@+id/btnSeeStudentPerfomance"
            android:layout_marginTop="47dp"
            android:background="#c2a1b2"
            android:textSize="20dp"
            android:layout_below="@+id/btnSeePerfomanceClass"
            android:layout_alignStart="@+id/btnSeePerfomanceClass"
            android:layout_alignEnd="@+id/btnSeePerfomanceClass" />

    </RelativeLayout>

    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_list"
        android:layout_gravity = "start"
        android:background="@color/colorDraver"
        android:choiceMode="singleChoice"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

</android.support.v4.widget.DrawerLayout>
