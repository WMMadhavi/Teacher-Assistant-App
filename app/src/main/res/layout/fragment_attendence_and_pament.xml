<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    tools:context="com.example.madhaviruwandika.teacher_assistant.Activity.Student_and_ReporterActivity.AttendenceAndPamentFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:background="@color/backgroundColour">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Attendence State"
            android:id="@+id/textView20"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:autoText="false"
            android:textColor="#fa62ca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/attendence_State"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView20"
            android:layout_alignParentEnd="true"
            android:background="#c4d6f7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date of Payments"
            android:id="@+id/textView22"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/attendence_State"
            android:layout_alignStart="@+id/textView20"
            android:textColor="#fa62ca" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_alignStart="@+id/textView31"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/markListLayout"
            android:background="#c4d6f7"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateList"

                android:columnCount="3"
                >


                <TableRow
                    android:id="@+id/logs_table_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#dddfe0"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/No"
                        android:text="No.    "
                        android:layout_column="0"
                        android:background="#c4d6f7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/Date"
                        android:textAlignment="center"
                        android:text="Date       "
                        android:layout_column="1"
                        android:background="#c4d6f7" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/Month_OF_payment"
                        android:textAlignment="center"
                        android:text="Month(for)                     "
                        android:layout_column="2"
                        android:background="#c4d6f7" />

                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
