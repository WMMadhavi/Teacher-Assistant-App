<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    tools:context=".Activity.SyllabusTrackerActivity.AddSylActivity"
    tools:showIn="@layout/activity_add_syl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6fafc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginTop="15dp"
        android:id="@+id/ClassName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ClassName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fillViewport="false"
            android:id="@+id/scrollView2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ClassName"
                android:layout_alignParentStart="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Class  :"
                    android:id="@+id/textView41"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerClass"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView41" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Unit : "
                    android:id="@+id/textView42"
                    android:layout_below="@+id/spinnerClass"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerUnit"
                    android:layout_alignTop="@+id/textView42"
                    android:layout_toEndOf="@+id/textView42" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lesson : "
                    android:id="@+id/textView43"
                    android:layout_below="@+id/spinnerUnit"
                    android:layout_marginTop="20dp"
                    android:layout_alignBottom="@+id/editTextLesson"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/editTextLesson" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextLesson"
                    android:layout_below="@+id/spinnerUnit"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView43" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lesson No: "
                    android:id="@+id/textView44"
                    android:layout_below="@+id/textView43"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerLessonNo"
                    android:layout_below="@+id/editTextLesson"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/textView44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lime Period : "
                    android:id="@+id/textView45"
                    android:layout_alignBottom="@+id/editTextTimePeriod"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTimePeriod"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/spinnerLessonNo"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="( Minutes )"
                    android:id="@+id/textView46"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView45"
                    android:layout_toEndOf="@+id/textView47" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Special Activities :"
                    android:id="@+id/textView47"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView46"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextSpecialAct"
                    android:layout_below="@+id/textView47"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/spinnerLessonNo" />

            </RelativeLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/buttonAdd"
            android:background="#1390f0"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/scrollView2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="47dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veiw data"
            android:id="@+id/buttonVeiwData"
            android:background="#1390f0"
            android:layout_marginStart="51dp"
            android:layout_alignTop="@+id/buttonAdd"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>